source 'https://rubygems.org'

gem 'rails', '4.2.1'
gem 'unicorn'
gem 'mysql2'

gem 'turbolinks'

# pagination
gem 'kaminari'

# html
gem 'slim'

# json
gem 'jbuilder', '~> 2.0'

# css
gem 'sass-rails', '~> 5.0'
gem "autoprefixer-rails"

# js
gem 'uglifier', '>= 1.3.0'
gem 'coffee-rails', '~> 4.1.0'

# Frontend packages
gem 'jquery-rails'
gem 'bootstrap-sass', '~> 3.3.4'
